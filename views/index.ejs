<%- include('./partials/header') %> 
<h1>INDEX PAGE</h1>
<% blogs.forEach(function(blog){ %>
  <div>
      <h2><%= blog.title %></h2>
      <img src="<%= blog.image%>"><br>
      <span><%= blog.created.toDateString() %> </span><br>
      <p><%- blog.body.substring(0,100) %><strong>. . . . .</strong> <br><a class="ui mini primary button" href="/blogs/<%= blog._id %> "> Read More</a></p>
      
  </div>
    <% }); %>


